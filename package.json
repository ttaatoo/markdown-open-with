{
  "name": "markdown-open-with",
  "displayName": "Markdown Open With",
  "description": "Open your Markdown files with external applications directly from the editor.",
  "version": "0.1.0",
  "publisher": "ttaatoo",
  "license": "MIT",
  "icon": "icon.png",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/ttaatoo/markdown-open-with.git"
  },
  "keywords": [
    "markdown",
    "open with",
    "external editor",
    "typora",
    "obsidian"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownOpenWith.open",
        "title": "Open With"
      },
      {
        "command": "markdownOpenWith.showPicker",
        "title": "Show App Picker"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "markdownOpenWith.open",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Open With",
      "properties": {
        "markdownOpenWith.apps": {
          "type": "array",
          "scope": "application",
          "default": [],
          "description": "List of external applications for opening Markdown files.",
          "items": {
            "type": "object",
            "required": [
              "name",
              "command"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name shown in the QuickPick menu."
              },
              "command": {
                "type": "string",
                "description": "Executable path or command to run."
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments passed to the command. Use {file} as a placeholder for the file path."
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "vite build",
    "watch": "vite build --watch",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:integration": "vscode-test",
    "package": "vsce package",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vitest": "^1.2.0"
  }
}
